# Copy to bootstrap/infisical.env (gitignored) and fill values before phase 2.

INFISICAL_IDENTITY_ID=<machine-identity-id>
INFISICAL_PROJECT_SLUG=<project-slug>
INFISICAL_ENV_SLUG=<env-slug>
INFISICAL_HOST_API=https://eu.infisical.com/api

# Infisical secret paths that back Argo CD repo credentials
INFISICAL_ARGOCD_GITHUB_REPO_CREDS_PATH=/argocd/github-repo-creds
INFISICAL_ARGOCD_GHCR_OCI_CREDS_PATH=/argocd/ghcr-oci-creds

# Example app secret sync (can be changed later)
INFISICAL_APP_CONFIG_NAMESPACE=apps
INFISICAL_APP_CONFIG_SECRET_NAME=app-config
INFISICAL_APP_CONFIG_PATH=/

# NetBird operator API key secret (required if using NetBird operator apps)
# Create this path in Infisical with key: NB_API_KEY
INFISICAL_NETBIRD_SECRET_NAMESPACE=netbird
INFISICAL_NETBIRD_SECRET_NAME=netbird-mgmt-api-key
INFISICAL_NETBIRD_OPERATOR_API_KEY_PATH=/netbird/operator
